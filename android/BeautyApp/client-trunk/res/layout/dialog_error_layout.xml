<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/no_treatments" />

    <utilities.view.MyFontTextView
        android:id="@+id/my_error_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/common_title_text_size" />

    <utilities.view.MyFontTextView
        android:id="@+id/my_error_dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_shape"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/dialog_ok_text"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/common_title_text_size" />

</LinearLayout>