<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <utilities.view.MyFontTextView
        android:id="@+id/singlechois_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_row_height"
        android:background="@color/dialog_theme_color"
        android:gravity="center"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/common_title_text_size" />

    <ListView
        android:id="@+id/singlechois_dialog_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>