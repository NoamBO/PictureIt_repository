<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_shape"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_row_order_notification_pic"
            android:layout_width="@dimen/beautician_picture_width"
            android:layout_height="@dimen/beautician_picture_height" />

        <TextView
            android:id="@+id/tv_row_order_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_row_order_notification1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/b_row_order_notification_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss" />
    </LinearLayout>

</LinearLayout>