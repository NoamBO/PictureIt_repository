<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_message_beautician_pic"
            android:layout_width="@dimen/beautician_picture_width"
            android:layout_height="@dimen/beautician_picture_height"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp" />

        <TextView
            android:id="@+id/tv_message_beautician_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_message_beautician_pic"
            android:layout_toLeftOf="@+id/iv_row_message_beautician_pic" />

        <TextView
            android:id="@+id/tv_message_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_beautician_name"
            android:layout_toLeftOf="@+id/iv_message_beautician_pic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_message_beautician_pic"
            android:layout_toLeftOf="@+id/iv_message_beautician_pic" >

            <TextView
                android:id="@+id/tv_message_raters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/rb__message_rating" />

            <RatingBar
                android:id="@+id/rb__message_rating"
                style="@style/MyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:isIndicator="true"
                android:numStars="5" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" >
    </FrameLayout>

    <TextView
        android:id="@+id/tv_message_inner_treatment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:orientation="vertical"
        android:padding="7dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wanted_treatment"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp" >

            <TextView
                android:id="@+id/tv_message_wanted_treatment1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_message_wanted_treatment2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" >
    </FrameLayout>

    <TextView
        android:id="@+id/tv_message_inner_treatment_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" >
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" >
    </FrameLayout>

    <TextView
        android:id="@+id/tv_message_inner_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" >
    </FrameLayout>

    <TextView
        android:id="@+id/tv_message_inner_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" >
    </FrameLayout>

</LinearLayout>
