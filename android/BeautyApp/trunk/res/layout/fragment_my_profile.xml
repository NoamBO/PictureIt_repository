<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/fl_my_profile_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/app_most_common_yellow_color" >
    </FrameLayout>

    <utilities.view.RoundImageView
        android:id="@+id/iv_my_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/fl_my_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-75dp"
        android:clickable="false" />

    <LinearLayout
        android:id="@+id/ll_my_profile_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_my_profile_image"
        android:orientation="vertical" >

        <utilities.view.MyFontTextView
            android:id="@+id/tv_my_profile_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/app_most_common_yellow_color"
            android:textSize="@dimen/common_title_text_size"
            android:textStyle="bold" />

        <utilities.view.MyFontTextView
            android:id="@+id/tv_my_profile_telephone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <utilities.view.MyFontTextView
            android:id="@+id/tv_my_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_my_profile_details"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <utilities.view.MyFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/address"
            android:textColor="@color/text_color_gray"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black" />

        <utilities.view.MyFontTextView
            android:id="@+id/tv_my_profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_color_gray" />
    </LinearLayout>

</RelativeLayout>