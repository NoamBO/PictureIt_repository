<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_shape" >

        <RelativeLayout
            android:id="@+id/vg_row_order_notification_data_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/iv_row_message_beautician_pic"
                android:layout_width="@dimen/beautician_picture_width"
                android:layout_height="@dimen/beautician_picture_height"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/tv_row_message_beautician_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_row_message_beautician_pic" />

            <TextView
                android:id="@+id/tv_row_message_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_row_message_beautician_name"
                android:layout_toLeftOf="@+id/iv_row_message_beautician_pic" />

            <TextView
                android:id="@+id/tv_row_message_received_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_row_message_beautician_pic"
                android:layout_alignParentBottom="true"
                android:text="kjkj" />
        </RelativeLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/pb_row_order_notification_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>