<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shape"
    android:orientation="vertical" >

    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_most_common_yellow_color"
        android:drawablePadding="@dimen/fragment_padding"
        android:drawableRight="@drawable/ic_clock_white"
        android:padding="@dimen/fragment_padding"
        android:text="@string/reminder"
        android:textColor="@color/app_white"
        android:textSize="@dimen/title_large_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/fragment_padding"
            android:orientation="horizontal" >

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fragment_padding"
                android:gravity="center"
                android:text="@string/character_next"
                android:textColor="@color/text_color_gray"
                android:textSize="20sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_color_gray" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1AlarmDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_padding" >

            <ImageView
                android:id="@+id/iv_dialog_reminder"
                android:layout_width="@dimen/beautician_picture_width"
                android:layout_height="@dimen/beautician_picture_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_padding"
                android:background="@drawable/profile_avatar" />

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:id="@+id/tv_row_dialog_reminder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_row_dialog_reminder"
                android:text="date"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/common_text_size" />

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:id="@+id/tv_row_dialog_reminder_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_row_dialog_reminder_date"
                android:layout_toLeftOf="@+id/iv_row_dialog_reminder"
                android:text="name"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/common_text_size" />

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:id="@+id/tv_row_dialog_reminder_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_row_dialog_reminder_customer_name"
                android:layout_toLeftOf="@+id/iv_row_dialog_reminder"
                android:text="treatment name"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/common_text_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>