<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_row_history_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" 
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_calendar"
            android:gravity="center_vertical"
            android:text="@string/date"
            android:textColor="@color/app_most_common_yellow_color"
            android:textSize="@dimen/title_medium_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_row_history_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_individual"
            android:gravity="center_vertical"
            android:text="@string/client"
            android:textColor="@color/app_most_common_yellow_color"
            android:textSize="@dimen/title_medium_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_row_history_treatment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_treatment"
            android:gravity="center_vertical"
            android:text="@string/treatment"
            android:textColor="@color/app_most_common_yellow_color"
            android:textSize="@dimen/title_medium_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_row_history_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_location"
            android:gravity="center_vertical"
            android:text="@string/address"
            android:textColor="@color/app_most_common_yellow_color"
            android:textSize="@dimen/title_medium_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_row_history_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_nis"
            android:gravity="center_vertical"
            android:text="@string/price"
            android:textColor="@color/app_most_common_yellow_color"
            android:textSize="@dimen/title_medium_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color_gray" />


</LinearLayout>