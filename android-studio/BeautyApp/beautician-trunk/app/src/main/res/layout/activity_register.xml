<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_most_common_yellow_color"
    android:orientation="vertical"
    android:padding="@dimen/fragment_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_shape"
        android:orientation="vertical"
        android:padding="@dimen/fragment_padding" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/beautyapp_reg_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_registration_code"
                android:textSize="17sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/black" />

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textSize="22sp" />
        </LinearLayout>

        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/press_to_change_profile_pic"
            android:textColor="@color/app_most_common_yellow_color" />

        <com.pictureit.noambaroz.beauticianapp.utilities.view.RoundImageView
            android:id="@+id/iv_registeration_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp" />

        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyEditText
            android:id="@+id/et_registration_code"
            style="@style/AppTheme.View.EditTextCustomHolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/password_that_sent_to_you_by_mail"
            android:singleLine="true"
            android:textSize="20sp" >

            <requestFocus />
        </com.pictureit.noambaroz.beauticianapp.utilities.view.MyEditText>

        <FrameLayout
            android:id="@+id/fl_registration_invalid_filed_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="invisible" >

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/invalid_filed"
                android:textColor="@color/app_most_common_yellow_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_red_alert" />
        </FrameLayout>

        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/if_your_password_got_lost"
            android:textColor="@color/text_color_gray" />

        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
            android:id="@+id/tv_registration_go_to_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_select_shape"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/app_white" />

        <RelativeLayout
            android:id="@+id/rl_registration_proceed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/registration_btn_shape" >

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:text="@string/proceed"
                android:textColor="@color/button_text_color"
                android:textSize="17sp" />

            <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/character_next"
                android:textColor="@color/button_text_color"
                android:textSize="30sp" />
        </RelativeLayout>

        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/you_must_fill_all_fields"
            android:textColor="@color/text_color_gray" />
    </LinearLayout>

</LinearLayout>