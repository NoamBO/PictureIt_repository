<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_shape" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_padding" >

            <ImageView
                android:id="@+id/iv_upcoming_treatment"
                android:layout_width="@dimen/beautician_picture_width"
                android:layout_height="@dimen/beautician_picture_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/profile_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_upcoming_treatment"
                android:orientation="vertical"
                android:paddingRight="@dimen/fragment_padding" >

                <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                    android:id="@+id/tv_upcoming_treatment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/title_medium_text_size" />

                <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                    android:id="@+id/tv_upcoming_treatment_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/common_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/divider_color_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_upcoming_treatment_price"
            android:layout_below="@+id/relativeLayout1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/fragment_padding" >

                    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                        android:id="@+id/tv_upcoming_treatment_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/common_text_size" />

                    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:drawableRight="@drawable/ic_calendar"
                        android:gravity="center_vertical"
                        android:text="@string/when"
                        android:textColor="@color/app_most_common_yellow_color"
                        android:textSize="@dimen/title_small_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/fragment_padding" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="3"
                        android:orientation="horizontal" >

                        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                            android:id="@+id/tv_upcoming_treatment_wanted_treatment2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/common_text_size" />

                        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                            android:id="@+id/tv_upcoming_treatment_wanted_treatment1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/common_text_size" />
                    </LinearLayout>

                    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:drawableRight="@drawable/ic_treatment"
                        android:gravity="center_vertical"
                        android:text="@string/wanted_treatment"
                        android:textColor="@color/app_most_common_yellow_color"
                        android:textSize="@dimen/title_small_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/fragment_padding" >

                    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                        android:id="@+id/tv_upcoming_treatment_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/common_text_size" />

                    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:drawableRight="@drawable/ic_location"
                        android:gravity="center_vertical"
                        android:text="@string/location"
                        android:textColor="@color/app_most_common_yellow_color"
                        android:textSize="@dimen/title_small_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/fragment_padding" >

                    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                        android:id="@+id/tv_upcoming_treatment_remarks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/common_text_size" />

                    <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:drawableRight="@drawable/ic_remaks"
                        android:gravity="center_vertical"
                        android:text="@string/remarks"
                        android:textColor="@color/app_most_common_yellow_color"
                        android:textSize="@dimen/title_small_text_size" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <com.pictureit.noambaroz.beauticianapp.utilities.view.MyFontTextView
            android:id="@+id/tv_upcoming_treatment_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/linearLayout1"
            android:background="@color/text_color_gray"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/title_large_text_size" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="@dimen/fragment_padding" >

            <FrameLayout
                android:id="@+id/fl_upcoming_treatment_delete"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginRight="@dimen/fragment_padding"
                android:layout_weight="1"
                android:background="@color/app_most_common_yellow_color" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_menu_delete" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_upcoming_treatment_call"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:background="@color/app_most_common_yellow_color" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_call" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>