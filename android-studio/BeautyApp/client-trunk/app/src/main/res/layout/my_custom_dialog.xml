<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <utilities.view.MyFontTextView
            android:id="@+id/my_custom_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_row_height"
            android:background="@color/dialog_theme_color"
            android:gravity="center"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/common_title_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/my_custom_dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone" />
    </FrameLayout>

    <utilities.view.MyFontTextView
        android:id="@+id/my_custom_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/common_title_text_size"
        android:visibility="gone" />

    <utilities.view.MyFontTextView
        android:id="@+id/my_custom_dialog_submessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp"
        android:visibility="gone" />

    <utilities.view.MyEditText
        android:id="@+id/my_custom_dialog_edittext"
        style="@style/EditTextCustomHolo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <utilities.view.MyFontTextView
            android:id="@+id/my_custom_dialog_negative_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:textColor="@color/button_text_color"
            android:visibility="gone" />

        <utilities.view.MyFontTextView
            android:id="@+id/my_custom_dialog_positive_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:textColor="@color/button_text_color"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>